<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">
    <link rel="canonical" href="<%= canonicalUrl %>">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üõí</text></svg>">
    <link rel="stylesheet" href="/styles.css">

    <!-- Open Graph -->
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description %>">
    <meta property="og:url" content="<%= canonicalUrl %>">
    <meta property="og:type" content="website">
    <meta property="og:image" content="https://dealcentral.vercel.app/images/logo.png">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= description %>">
    <meta name="twitter:image" content="https://dealcentral.vercel.app/images/logo.png">

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Deal Central",
      "url": "<%= canonicalUrl %>",
      "description": "<%= description %>",
      "logo": "https://dealcentral.vercel.app/images/logo.png"
    }
    </script>
</head>
<body>
    <header>
        <div class="menu-container">
            <button class="menu-button" onclick="toggleMenu()">‚ãÆ</button>
            <nav class="navigation" id="navigation">
                <a href="/" class="<%= currentCategory === null ? 'active' : '' %>">Home</a>
                <a href="/category/Electronics-&-Gaming" class="<%= currentCategory === 'Electronics & Gaming' ? 'active' : '' %>">Electronics & Gaming</a>
                <a href="/category/Home-&-kitchen-gadgets" class="<%= currentCategory === 'Home & kitchen gadgets' ? 'active' : '' %>">Home & Kitchen</a>
                <a href="/category/Beauty-&-personal-care" class="<%= currentCategory === 'Beauty & personal care' ? 'active' : '' %>">Beauty & Personal Care</a>
                <a href="/category/Fitness-&-health-tools" class="<%= currentCategory === 'Fitness & health tools' ? 'active' : '' %>">Fitness & Health</a>
                <a href="/category/Baby-products" class="<%= currentCategory === 'Baby products' ? 'active' : '' %>">Baby Products</a>
                <a href="/category/Discounts" class="<%= currentCategory === 'Discounts' ? 'active' : '' %>">Discount %</a>
            </nav>
        </div>
        <div class="logo">
            <span class="logo-icon">üõí</span>
            <h1>Deal Central</h1>
        </div>
        <p>Your ultimate destination for unbeatable deals and savings!</p>
    </header>
    <% if (currentCategory !== null) { %>
    <div class="category-header">
        <h2><%= currentCategory %></h2>
        <a href="/" class="back-link">‚Üê Back to Home</a>
    </div>
    <% } %>
    <div class="products">
        <% products.forEach(product => { %>
            <div class="product">
                <a href="<%= product.url %>" target="_blank">
                    <img class="product-image" src="<%= product.image %>" alt="<%= product.name %>">
                    <% if (product.images && product.images.length > 1) { %>
                        <div class="additional-images">
                            <% product.images.slice(1, 4).forEach(img => { %>
                                <img src="<%= img %>" alt="product image" class="thumbnail">
                            <% }); %>
                        </div>
                    <% } %>
                    <br><%= product.name %>
                </a>
                <% if (product.review) { %>
                    <p class="review">‚≠ê <%= product.review %></p>
                <% } %>
                <% if (product.pros && product.pros.length) { %>
                    <div class="pros-cons">
                        <div class="pros">üëç Pros: <%= product.pros.join(', ') %></div>
                        <% if (product.cons && product.cons.length) { %>
                            <div class="cons">üëé Cons: <%= product.cons.join(', ') %></div>
                        <% } %>
                    </div>
                <% } %>
                <% if (product.whyBuy) { %>
                    <p class="why-buy">üí∞ <%= product.whyBuy %></p>
                <% } %>
                <% if (product.dealScore) { %>
                    <p class="deal-score">üî• Deal Score: <%= product.dealScore %>/10</p>
                <% } %>
                <% if (product.editorPick) { %>
                    <p class="editor-pick">Editor's Pick</p>
                <% } %>
            </div>
            <script type="application/ld+json">
            {
              "@context": "https://schema.org",
              "@type": "Product",
              "name": "<%= product.name %>",
              "image": "<%= product.image %>",
              "description": "<%= product.review %>",
              "offers": {
                "@type": "Offer",
                "url": "<%= product.url %>",
                "price": "<%= product.price.replace(/[^0-9.]/g, '') %>",
                "priceCurrency": "USD",
                "availability": "https://schema.org/InStock"
              },
              "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "<%= (product.dealScore / 2).toFixed(1) %>",
                "bestRating": "5",
                "reviewCount": "1"
              }
            }
            </script>
        <% }); %>
    </div>
    <% if (currentCategory === null) { %>
    <div class="hot-categories">
        <h2>Hot Categories</h2>
        <div class="categories-grid">
            <a href="/category/Electronics-&-Gaming" class="category-link">
                <div class="category">Electronics & Gaming (best sellers, deals)</div>
            </a>
            <a href="/category/Home-&-kitchen-gadgets" class="category-link">
                <div class="category">Home & kitchen gadgets</div>
            </a>
            <a href="/category/Beauty-&-personal-care" class="category-link">
                <div class="category">Beauty & personal care</div>
            </a>
            <a href="/category/Fitness-&-health-tools" class="category-link">
                <div class="category">Fitness & health tools</div>
            </a>
            <a href="/category/Baby-products" class="category-link">
                <div class="category">Baby products</div>
            </a>
            <a href="/category/Discounts" class="category-link">
                <div class="category">Discount %</div>
            </a>
        </div>
    </div>
    <% } %>
    <footer>
        <p>&copy; 2025 Deal Central. All rights reserved. | Find the best deals on Amazon.</p>
    </footer>
    <script>
        function toggleMenu() {
            const nav = document.getElementById('navigation');
            nav.classList.toggle('show');
        }
    </script>
</body>
</html>